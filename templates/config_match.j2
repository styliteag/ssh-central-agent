# Common settings for all user-defined hosts from hosts/* files
# Only hosts tagged with "sca-host" will match
Match tagged sca-host
	# Include ~/.ssh/config_sca_common
	# Common Settings for All hosts tagged with "sca-host"
    KbdInteractiveAuthentication no
    TCPKeepAlive yes
	#IdentityAgent {{ sca_auth_sock }}
	#ForwardAgent {{ sca_auth_sock }}
	IdentityAgent {{ mux_auth_sock }}
	#ForwardAgent {{ mux_auth_sock }}

    # if both ProxyJump and ProxyCommand are set, ProxyJump wins. ProxyCommand is ignored.
    ###ProxyJump sca-jump_org
	### ProxyCommand ssh -W [%h]:%p sca-jump_org
	#
	### First Try Direct: "socat 2>/dev/null - tcp4:%h:%p,connect-timeout=0.1"
	#ProxyCommand sh -c "socat 2>/dev/null - tcp4:%h:%p,connect-timeout=0.1 || ssh -W '[%h]:%p' sca-jump_org 2>/dev/null || ssh -W '[%h]:%p' sca-jump 2>/dev/null || ssh -W '[%h]:%p' sca-jump_local 2>/dev/null"
    ProxyCommand sh -c "socat 2>/dev/null - tcp4:%h:%p,connect-timeout=0.2 || ssh -W '[%h]:%p' sca-jump 2>/dev/null"
