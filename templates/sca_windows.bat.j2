REM SSH Agent Multiplexer Gateway Script (Windows Batch)
REM This is a Windows batch wrapper for the Python SCA implementation

setlocal

REM Template variables (set by Ansible)
set RUSERNAME={{ remote_username }}
set SCA_SSH_AUTH_SOCK={{ sca_auth_sock }}
set MUX_SSH_AUTH_SOCK={{ mux_auth_sock }}
set PLAYBOOK_DIR={{ playbook_dir }}
set SSH_CONFIG_FILE={{ ssh_config_file }}
set SCA_SCRIPT=%~f0
{% if my_ssh_key is defined and my_ssh_key != '~/.ssh/id_unused' %}
set MY_SSH_KEY={{ my_ssh_key }}
{% endif %}

REM Change to playbook directory
cd /d "%PLAYBOOK_DIR%"

REM Run Python module
python -m sca %*

endlocal
